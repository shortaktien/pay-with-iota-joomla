<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_PAYWITHIOTA</name>
    <author>Alexander K.</author>
    <creationDate>August 2021</creationDate>
    <copyright>Copyright (C) 2021 . All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>info@short-aktien.de</authorEmail>
    <authorUrl>https://short-aktien.de/iota-pay/</authorUrl>
    <version>1.0.10</version>
    <description>PLG_PAYWITHIOTA_XML_DESCRIPTION</description>
    <files>
        <filename plugin="paywithiota">paywithiota.php</filename>
    </files>
    <languages folder="lang">
        <language tag="en-GB">en-GB.plg_content_paywithiota.ini</language>
        <language tag="en-GB">en-GB.plg_content_paywithiota.sys.ini</language>
    </languages>
    <updateservers>
    <server type="extension" name="Extension Updates" priority="2">https://raw.githubusercontent.com/shortaktien/pay-with-iota-joomla/main/paywithiota.xml</server>
    </updateservers>
    <config>
        <fields name="params">
            <fieldset name="basic">

                <field
                        name="iota_address"
                        type="text"
                        label="PLG_PAYWITHIOTA_ADDRESS_LABEL"
                        description="PLG_PAYWITHIOTA_ADDRESS_DESC"
                />
                <field
                        name="iota_amount"
                        type="text"
                        label="PLG_PAYWITHIOTA_AMOUNT_LABEL"
                        description="PLG_PAYWITHIOTA_AMOUNT_DESC"
                />
                <field
                        name="iota_currency"
                        type="text"
                        label="PLG_PAYWITHIOTA_CURRENCY_LABEL"
                        description="PLG_PAYWITHIOTA_CURRENCY_DESC"
                />
                <field
                        name="iota_user"
                        type="text"
                        label="PLG_PAYWITHIOTA_USER_LABEL"
                        description="PLG_PAYWITHIOTA_USER_DESC"
                />
            </fieldset>
        </fields>
    </config>
</extension>
